<view class="container">
  <image class="head-image" src="{{news.imgSrc}}"></image>
  <image class="audio" src="/images/music/music-start.png"></image>
  <view class="author-date">
    <image src="{{news.avatar}}" class="avatar"></image>
    <text class="author">{{news.author}}</text>
    <text class="const-text">发表于</text>
    <text class="date">24小时前</text>
  </view>
  <text class="title">{{news.title}}</text>
  <view class="tool">
    <view class="circle-img">
      <image src="/images/icon/collection{{collected?'':'-anti'}}.png" catchtap="onCollectionTap"></image>
      <image src="/images/icon/share-anti.png" catchtap="onShareTap"></image>
    </view>
    <view class="horizon"></view>
  </view>
  <text class="detail">{{news.detail}}</text>
</view>